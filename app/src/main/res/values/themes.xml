<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SuperStore" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color</item>

        <!-- System UI Configurations-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true
        </item>  <!-- For making Navigation bar content color dark -->
    </style>

    <!-- Splash screen. -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <!-- System UI Configurations-->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false</item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@color/primary_color</item>
<!--        <item name="android:windowSplashScreenBrandingImage">@drawable/splash_image</item> &lt;!&ndash; to set an image to be shown at the bottom of the splash screen. &ndash;&gt;-->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>  <!-- For making Navigation bar content color dark -->
        <item name="windowSplashScreenBackground">@color/primary_color</item> <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenAnimationDuration">200</item> <!-- Required for animated icons. -->
        <item name="postSplashScreenTheme">@style/Base.Theme.SuperStore</item> <!-- Set the theme of the Activity that directly follows your splash screen. This is required. -->
    </style>
</resources>